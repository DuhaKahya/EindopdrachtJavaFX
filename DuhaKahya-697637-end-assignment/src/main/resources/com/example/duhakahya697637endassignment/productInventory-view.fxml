<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import javafx.scene.control.cell.PropertyValueFactory?>
<AnchorPane styleClass="anchorPane" prefHeight="600.0" prefWidth="850.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.duhakahya697637endassignment.ProductInventoryController">
   <children>
      <GridPane styleClass="gridPane" prefHeight="600.0" prefWidth="204.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints maxHeight="81.0" minHeight="10.0" prefHeight="75.0" vgrow="SOMETIMES" />
          <RowConstraints maxHeight="80.0" minHeight="10.0" prefHeight="80.0" vgrow="SOMETIMES" />
          <RowConstraints maxHeight="126.0" minHeight="10.0" prefHeight="66.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="129.0" minHeight="6.0" prefHeight="66.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="194.0" minHeight="10.0" prefHeight="70.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="211.0" minHeight="10.0" prefHeight="195.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
      
              <Button fx:id="DashBoardButton" onAction="#onDashboardButtonClick" prefHeight="32.0" prefWidth="146.0" text="Dashboard" textAlignment="CENTER" GridPane.rowIndex="1">
                  <cursor>
                      <Cursor fx:constant="HAND" />
                  </cursor>
               <GridPane.margin>
                  <Insets left="30.0" />
               </GridPane.margin>
              </Button>
              <Button fx:id="CreateOrderButton" onAction="#onCreateOrderButtonClick" prefHeight="33.0" prefWidth="145.0" text="Create order" GridPane.rowIndex="2">
                  <cursor>
                      <Cursor fx:constant="HAND" />
                  </cursor>
               <GridPane.margin>
                  <Insets left="30.0" />
               </GridPane.margin>
              </Button>
              <Button fx:id="ProductInventoryButton" onAction="#onProductInventoryButtonClick" prefHeight="35.0" prefWidth="143.0" text="Product inventory" GridPane.rowIndex="3">
                  <cursor>
                      <Cursor fx:constant="HAND" />
                  </cursor>
               <GridPane.margin>
                  <Insets left="30.0" />
               </GridPane.margin>
              </Button>
              <Button fx:id="OrderHistoryButton" onAction="#onOrderHistoryButtonClick" prefHeight="33.0" prefWidth="142.0" text="Order history" GridPane.rowIndex="4">
                  <cursor>
                      <Cursor fx:constant="HAND" />
                  </cursor>
               <GridPane.margin>
                  <Insets left="30.0" />
               </GridPane.margin>
              </Button>
             <Button fx:id="LogOutButton" mnemonicParsing="false" onAction="#onLogoutButtonClick" prefHeight="34.0" prefWidth="63.0" text="Log out" GridPane.rowIndex="5">
                 <GridPane.margin>
                     <Insets left="40.0" top="100.0" />
                 </GridPane.margin>
                 <cursor>
                     <Cursor fx:constant="HAND" />
                 </cursor>
             </Button>
         </children>
      </GridPane>
      <Label layoutX="212.0" layoutY="30.0" text="Product inventory">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <TableView fx:id="productsTableViewInventory" layoutX="212.0" layoutY="69.0" prefHeight="459.0" prefWidth="620.0">
          <columns>
              <TableColumn prefWidth="75.0" text="Quantity">
                  <cellValueFactory>
                      <PropertyValueFactory property="quantity" />
                  </cellValueFactory>
              </TableColumn>
              <TableColumn prefWidth="200.0" text="Name">
                  <cellValueFactory>
                      <PropertyValueFactory property="name" />
                  </cellValueFactory>
              </TableColumn>
              <TableColumn prefWidth="100.0" text="Category">
                  <cellValueFactory>
                      <PropertyValueFactory property="category" />
                  </cellValueFactory>
              </TableColumn>
              <TableColumn prefWidth="80.0" text="Price">
                  <cellValueFactory>
                      <PropertyValueFactory property="price" />
                  </cellValueFactory>
              </TableColumn>
              <TableColumn prefWidth="150.0" text="Description">
                  <cellValueFactory>
                      <PropertyValueFactory property="description" />
                  </cellValueFactory>
              </TableColumn>
          </columns>
      </TableView>
      <Button fx:id="addProductButton" onAction="#onAddProductButtonClick" layoutX="212.0" layoutY="540.0" mnemonicParsing="false" text="Add product" />
      <Button fx:id="editProductButton" onAction="#onEditProductButtonClick" layoutX="307.0" layoutY="540.0" mnemonicParsing="false" text="Edit product" />
      <Button fx:id="deleteProductButton" onAction="#onDeleteProductButtonClick" layoutX="399.0" layoutY="540.0" mnemonicParsing="false" text="Delecte product" />
   </children>
</AnchorPane>
