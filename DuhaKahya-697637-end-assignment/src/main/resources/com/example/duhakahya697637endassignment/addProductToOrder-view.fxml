<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane prefHeight="500.0" prefWidth="750.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.duhakahya697637endassignment.AddProductToOrderController">
  <columnConstraints>
    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints maxHeight="187.0" minHeight="10.0" prefHeight="44.0" vgrow="SOMETIMES" />
    <RowConstraints maxHeight="286.0" minHeight="10.0" prefHeight="279.0" vgrow="SOMETIMES" />
    <RowConstraints maxHeight="125.0" minHeight="10.0" prefHeight="39.0" vgrow="SOMETIMES" />
      <RowConstraints maxHeight="125.0" minHeight="10.0" prefHeight="41.0" vgrow="SOMETIMES" />
  </rowConstraints>
   <children>



      <Label text="Select product">
         <font>
            <Font size="24.0" />
         </font>
         <GridPane.margin>
            <Insets left="10.0" />
         </GridPane.margin>
      </Label>
      <Label text="Quantity:" GridPane.rowIndex="2">
         <font>
            <Font size="14.0" />
         </font>
         <GridPane.margin>
            <Insets left="10.0" />
         </GridPane.margin>
      </Label>
      <TextField fx:id="quantityTextField" prefHeight="25.0" prefWidth="62.0" promptText="Quantity" GridPane.rowIndex="2">
         <GridPane.margin>
            <Insets left="100.0" right="550.0" />
         </GridPane.margin>
      </TextField>
      <Button fx:id="addToOrderButton" mnemonicParsing="false" onAction="#addToOrderButtonClick" text="Add to order" GridPane.rowIndex="3">
         <GridPane.margin>
            <Insets left="10.0" />
         </GridPane.margin>
      </Button>
      <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#cancelButtonClick" text="Cancel" GridPane.rowIndex="3">
         <GridPane.margin>
            <Insets left="100.0" />
         </GridPane.margin>
      </Button>

       <TableView fx:id="allProductsTableView" prefHeight="200.0" prefWidth="400.0" GridPane.rowIndex="1">
           <columns>
               <TableColumn prefWidth="75.0" text="Quantity">
                   <cellValueFactory>
                       <PropertyValueFactory property="quantity" />
                   </cellValueFactory>
               </TableColumn>
               <TableColumn prefWidth="200.0" text="Name">
                   <cellValueFactory>
                       <PropertyValueFactory property="name" />
                   </cellValueFactory>
               </TableColumn>
               <TableColumn prefWidth="150.0" text="Category">
                   <cellValueFactory>
                       <PropertyValueFactory property="category" />
                   </cellValueFactory>
               </TableColumn>
               <TableColumn prefWidth="75.0" text="Price">
                   <cellValueFactory>
                       <PropertyValueFactory property="price" />
                   </cellValueFactory>
               </TableColumn>
               <TableColumn prefWidth="200.0" text="Description">
                   <cellValueFactory>
                       <PropertyValueFactory property="description" />
                   </cellValueFactory>
               </TableColumn>
           </columns>
           <GridPane.margin>
               <Insets left="10.0" right="20.0" />
           </GridPane.margin>
       </TableView>
      <Label fx:id="errorLabel" GridPane.rowIndex="2">
         <GridPane.margin>
            <Insets left="250.0" />
         </GridPane.margin>
      </Label>

   </children>
</GridPane>
